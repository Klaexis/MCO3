<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="../public/CSS/Home_CSS.css" />
        <title>Art Fair</title>
    </head>
    <body id="body-start" style="background: grey;">
    <%- include("header") -%>
        
        <!-- content start -->
        <div id="carouselMain" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="5000">
                    <img src="../public/Images/Menu IMG/art_intro.jpg"   alt="starry night" class="menuIMG d-block vw-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">WE GUARANTEE QUALITY ART</h3>
                    </div>
                </div>
                <div class="carousel-item" data-interval="5000">
                    <img src="../public/Images/Menu IMG/art_intro2.png" class="menuIMG d-block vw-100" alt="Starry Night Over The RhÃ´ne">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">Buy Art Online</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-warning">
            <h5 class="pt-5  text-center text-uppercase m-0 text-dark d-block d-md-none font-weight-bolder" >WE GUARANTEE QUALITY ART</h5>
            <p class="text-center  text-dark pb-5 pt-3 m-0 h6 d-md-none font-weight-bolder" >Buy Art Online</p>
            <h3 class="text-center  text-dark  py-4 m-0 d-none d-md-block font-weight-bolder">Buy Art Online</h3>
        </div>
        <!-- slider end -->       
        <!-- new art start -->
        <div class="container" id="Art">
            <br />
            <h3 class="text-center text-light  py-4 m-0  d-none d-md-block font-weight-bolder"> Art </h3>
            
            <div id="carousel-Art" class="carousel slide carousel-fade" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <% let i = 0;
                    homeArt.forEach(function (homeArt) 
                    {
                        if(i = 0)
                        { %>
                            <li data-target="#carousel-Art" data-slide-to="<%=i%>" class="active"></li>
                        <%
                        }
                        else 
                        { %>
                            <li data-target="#carousel-Art" data-slide-to="<%=i%>"></li>
                        <%
                        }
                        i++;
                    });
                    %>
                </ol>
                
                <div class="carousel-inner" style="border:5px solid black">
                    <% homeArt.forEach(function (homeArt) 
                    {
                        if(homeArt.artID == "art1")
                        { %>
                            <div class="carousel-item active" data-interval="5000">
                                <!--  <a href="www.google.com" class="aBord-none"> </a> --> 
                                <!-- When image click result on search -->

                                <img src="public/Images/Art/<%=homeArt.artImage%>" class="d-block vw-100" alt="<%=homeArt.artName %>"  height="500">

                                <div class="carousel-caption d-none d-md-block">
                                    <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important"><%=homeArt.artName %></h4>
                                </div>
                            </div>
                        <%
                        }
                        else if(homeArt.artID != "art1")
                        { %>
                            <div class="carousel-item" data-interval="5000">
                                <img src="public/Images/Art/<%=homeArt.artImage%>" class="d-block vw-100" alt="<%=homeArt.artName %>"  height="500">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important"><%=homeArt.artName %></h4>
                                </div>
                            </div>
                        <%
                        }
                    });
                    %>
                </div>
                
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#carousel-Art" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-Art" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!-- new art end -->
        <br/>
        <!-- artist start -->
        <div class="container-fluid bg-warning pb-4 px-2" id="artist">
            <br />
            <h3 class="text-center text-dark font-weight-bolder"> Artists </h3>
            
            <div class="container-fluid b25 my-2 p-2">
                <div class="container">
                    <div id="carousel-artist" class="carousel slide carousel-fade" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <% let j = 0;
                            homeArtist.forEach(function (homeArtist) 
                            {
                                if(j = 0)
                                { %>
                                    <li data-target="#carousel-artist" data-slide-to="<%=j%>" class="active"></li>
                                <%
                                }
                                else 
                                { %>
                                    <li data-target="#carousel-artist" data-slide-to="<%=j%>"></li>
                                <%
                                }
                                j++;
                            });
                            %>
                        </ol>
                        
                        <div class="carousel-inner" style="border:5px solid yellow">
                            <% homeArtist.forEach(function (homeArtist) 
                            {
                                if(homeArtist.artistID == "artist1")
                                { %>
                                    <div class="carousel-item active" data-interval="5000">
                                        <img src="/public/Images/Artist/<%=homeArtist.artistImage%>" class="d-block vw-100" alt="<%=homeArtist.artistName%>"  height="550">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important"><%=homeArtist.artistName%></h4>
                                        </div>
                                    </div>
                                <%
                                }
                                else if(homeArtist.artistID != "artist1")
                                { %>
                                    <div class="carousel-item" data-interval="5000">
                                        <img src="/public/Images/Artist/<%=homeArtist.artistImage%>" class="d-block vw-100" alt="<%=homeArtist.artistName%>"  height="550">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important"><%=homeArtist.artistName%></h4>
                                        </div>
                                    </div>
                                <%
                                }
                            });
                            %>   
                        </div>
                        <!-- Left and right controls -->
                        <a class="carousel-control-prev" href="#carousel-artist" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-artist" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- artist end -->
        <br/>
        <!-- event start -->
        <div class="container" id="event">
            <br />
            <h3 class="text-center text-light  py-4 m-0  d-none d-md-block font-weight-bolder"> Events/Exhibits </h3>
            
            <div id="carousel-event" class="carousel slide carousel-fade" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-event" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-event" data-slide-to="1"></li>
                    <li data-target="#carousel-event" data-slide-to="2"></li>
                    <li data-target="#carousel-event" data-slide-to="3"></li> 
                </ol>
                
                <div class="carousel-inner" style="border:5px solid black">
                     <div class="carousel-item active" data-interval="5000">
                         <a href="https://artpiq.net/pages/art-events" > 
                             <img src="https://i.shgcdn.com/4f257403-f67f-49b1-8d0d-0e8cd87c95a7/-/format/auto/-/preview/3000x3000/-/quality/lighter/" class="d-block vw-100" alt="artpiq"  height="550">
                         </a>
                        
                        <div class="carousel-caption d-none d-md-block">
                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">ARTPIQ Art Exhibitions & Events</h4>
                        </div>
                    </div>
                    
                    <div class="carousel-item" data-interval="5000">
                         <a href="https://artfairphilippines.com/" class="aBord-none"> 
                             <img src="https://iconicmnl.com/wp-content/uploads/2022/03/Art-Fair-04.jpg" class="d-block vw-100" alt="artfairPH 2022"  height="550">
                         </a>
                        
                        <div class="carousel-caption d-none d-md-block">
                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">Art Fair Philippines 2022</h4>
                        </div>
                    </div>
                    
                    <div class="carousel-item" data-interval="5000">
                         <a href="https://www.silverlensgalleries.com/exhibitions/2022-10-06/collectors-plus" class="aBord-none"> 
                             <img src="https://www.silverlensgalleries.com/assets/exhibitions/2022-10-06/collectors-plus/header-image/srcset/sm/CP-3-Header.jpg" class="d-block vw-100" alt="silverlens gallery"  height="550">
                         </a>
                        
                        <div class="carousel-caption d-none d-md-block">
                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">Silverlens Gallery</h4>
                        </div>
                    </div>
                    
                    <div class="carousel-item" data-interval="5000">
                         <a href="https://metmuseum.ph/in-full-view-the-metropolitan-museum-of-manila-collection/" class="aBord-none"> 
                             <img src="https://files.ocula.com/anzax/89/89e40a64-cc38-4ce4-8a6f-16af4321d6e6_750_470.png" class="d-block vw-100" alt="Metropolitan Museum of Manila"  height="550">
                         </a>
                        
                        <div class="carousel-caption d-none d-md-block">
                            <h4 class="mx-auto text-warning text-uppercase w-75 p-2 b25" style="border:5px solid #ffc107 !important">Metropolitan Museum of Manila collection</h4>
                        </div>
                    </div>
                </div>
                
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#carousel-event" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-event" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!-- event end -->
        <br/>
            
        <%- include("footer") -%>
</html>