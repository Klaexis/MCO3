<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"><!-- Required meta tags -->

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../public/CSS/Home_CSS.css" />
    <title>Shopping Cart</title>
</head>
<body id="body-start">
<%- include("./partials/header") -%>
<div class="container">
    <table>
        <% artDetails.forEach(function (artDetails) { %>
            <tr>
                <div class="product-container">
                    <div class="product-img-container">
                        <img src="/public/Images/Art/<%= artDetails.artImage %>" alt="<%= artDetails.artImage %>" class="product-img" />
                    </div>
                    <div class="product-desc">
                        <div class="product-name"><%= artDetails.artName %></div>
                        <div class="product-artist"><%= artDetails.artistName %></div>
                        <div class="product-cost">â‚±<%= artDetails.cost %></div>
                    </div>
                    <% cart.forEach(function (cart) { %>
                        <% if (cart.artNames.length != 0) { %>
                            <% for (let i = 0; i < cart.artNames.length; i++) { %>
                                <% if (cart.artNames[i] == artDetails.artName) { %>
                                    <a href="/addtocart/<%= artDetails.artName %>" class="btn btn-sm btn-secondary disabled" value="add to cart">add to cart</a>
                                    <%break;%>
                                <% } %>
                                <% if (cart.artNames[i] != artDetails.artName && cart.artNames[i] == cart.artNames[cart.artNames.length - 1]) { %>
                                    <a href="/addtocart/<%= artDetails.artName %>" class="btn btn-sm btn-danger">add to cart</a>
                                <% } %>
                            <% } %>
                        <% } %>
                        <% if (cart.artNames.length == 0) { %>
                            <a href="/addtocart/<%= artDetails.artName %>" class="btn btn-sm btn-danger">add to cart</a>
                        <% } %>
                    <% }); %>
                </div>
            </tr>
        <% }); %>
    </table>
</div>
<link rel="stylesheet" href="../public/CSS/product.css">
<link rel="stylesheet" href="../public/CSS/style.css">
<%- include("./partials/footer") -%>